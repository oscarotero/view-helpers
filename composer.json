{
    "name": "oscarotero/view-helpers",
    "type": "library",
    "description": "Collection of useful functions to use in your templates.",
    "license": "MIT",
    "keywords": [
        "html",
        "view",
        "helpers",
        "utils",
        "string"
    ],
    "homepage": "https://github.com/oscarotero/view-helpers",
    "support": {
        "issues": "https://github.com/oscarotero/view-helpers/issues"
    },
    "require": {
        "php": "^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "ViewHelpers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ViewHelpers\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs"
        ],
        "cs-fix": "php-cs-fixer fix . --fixers=-psr0"
    }
}
